<article id="post-{{ wp.the_ID }}" {{ wp.post_class }}>
    <header class="page-header">
        <h1>{{ wp.the_title }}</h1>
    </header><!-- .entry-header -->

    <div class="entry-meta">
        {% include 'includes/entry-meta.twig' %}
    </div><!-- .entry-meta -->

    <div class="entry-content">
        {{ wp.the_content }}
        {{ wp.wp_link_pages({'echo':'0'}) }}

    </div><!-- .entry-content -->

    <footer class="entry-footer">
        {{ wp.edit_post_link('Edit','<small>','</small>') }}
    </footer><!-- .entry-footer -->
</article><!-- #post-## -->
<hr/>
{{ include('includes/comments.twig') }}